{
  "name": "arcomage-electron",
  "version": "1.0.0",
  "description": "Arcomage game",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "mocha --files true -r ts-node/register engine-test/waist-test.ts",
    "build:linux": "electron-packager . Arcomage --ignore=arcomage --overwrite --out=dist --extra-resource=arcomage/dist/frontend --platform=linux --arch=x64",
    "build:win": "electron-packager . Arcomage --ignore=arcomage --overwrite --out=dist --extra-resource=arcomage/dist/frontend --platform=win32 --arch=x64",
    "build:mac": "electron-packager . Arcomage --ignore=arcomage --overwrite --out=dist --extra-resource=arcomage/dist/frontend --platform=darwin --arch=x64"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patrykwlazlowicz/arcomage-electron.git"
  },
  "author": "Patryk Wlaz≈Çowicz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patrykwlazlowicz/arcomage-electron/issues"
  },
  "homepage": "https://github.com/patrykwlazlowicz/arcomage-electron#readme",
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "chai": "^4.2.0",
    "electron-packager": "^14.2.1",
    "electron-reload": "^1.5.0",
    "mocha": "^7.1.1",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "electron": "^8.2.0",
    "dotenv": "^8.2.0"
  }
}
